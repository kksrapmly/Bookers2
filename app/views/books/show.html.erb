<div class="container">
  <div class="row">


    <!-- メイン部分 -->
    <!-- 左カラム -->
    <%= render 'books/list', book: @book, user: @user %>

    <!-- 右カラム -->
    <div class="main-list col-md-9">
      <div class="book-detail">
      	<h2>Book detail</h2>
      	<table class="table">
      	  <thead>
      	  	<% if @user.id == current_user.id %>
      	  	<tr>
      	  	  <td class="col-md-1">
      	  	  	<%= attachment_image_tag @user, :profile_image, fallback: "no_image.jpg", class: "img-responsive" %>
      	  	  	<%= link_to @user.name, user_path(@user.id), class: "user_#{@user.id}" %></td>
      	  	  <td class="col-md-2"></td>
      	  	  <td class="col-md-2">
      	  	  	<%= @book_id.title %></td>
      	  	  <td class="col-md-2">
      	  	  	<%= @book_id.body %></td>
      	  	  <td class="col-md-2">
      	  	  	<%= link_to "Edit", edit_book_path, class: "btn btn-success btn-sm edit_book_#{@book_id.id}" %></td>
      	  	  <td class="col-md-2">
      	  	  	<%= link_to "Destroy", book_path, method: :delete, data: { confirm: "本当に消しますか？" }, class: "btn btn-danger btn-sm destroy_book_#{@book_id.id}" %></td>
      	  	  <td class="col-md-1"></td>
      	  	</tr>
      	  	<% else %>
      	  	<tr>
      	  	  <td class="col-md-1">
      	  	  	<%= attachment_image_tag @user, :profile_image, fallback: "no_image.jpg" ,class: "img-responsive" %>
      	  	  	<%= link_to @user.name,user_path(@user.id),class: "user_#{@user.id}" %></td>
      	  	  <td class="col-md-2"></td>
			  <td class="col-md-4"><%= @book_id.title %></td>
			  <td class="col-md-5"><%= @book_id.body %></td>
      	  	</tr>
      	  	<% end %>
      	  </thead>
      	</table>
      </div>
    </div>


  </div>
</div>


<div class="container">
  <div class="row">
  	<div class="col-md-3"></div>
  	<div class="col-md-6"></div>
  	<div class="col-md-3">
  	  <p>CopyRight Infratop.inc</p>
  	</div>
  </div>
</div>